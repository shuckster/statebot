  "scripts": {
    "test": "echo TODO",
    "build:all": "concurrently \"pnpm run build:browser\" \"pnpm run build:node\" ; pnpm run build:docs",
    "build:browser": "rollup --config rollup.config.browser.js",
    "build:node": "rollup --config rollup.config.node.js",
    "build:docs": "documentation build src/index.js -f html -o docs/ --theme node_modules/documentation-theme-light ; ./fix-docs.sh",
    "build:docs:watch": "documentation build src/index.js -w -f html -o docs/ --theme node_modules/documentation-theme-light"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
